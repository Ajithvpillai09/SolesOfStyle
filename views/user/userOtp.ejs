<style>
    .card-login {
   max-width: 350px;
}
.card-login:hover{
    box-shadow: 0 15px 25px rgba(53, 53, 53, 0.6);
}
.card-title{
  text-align: center;
  font-size: 45px;
  font-weight: 600;
  background-image: linear-gradient(to left, #88d5cd, #0f6152);
  color: transparent;
  background-clip: text;
  -webkit-background-clip: text;
}
</style>
<body>
   <main>
       <section class="content-main mt-80 mb-80">
        <h4 class="card-title mb-4">Soles Of Style</h4>
           <div class="card mx-auto card-login">
                   <div class="card-body ">
                    <% if(errMessage != ""){ %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert" style="padding: 10px;">
                          <%=  errMessage %>
                          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="padding: 1rem;">
                          </button>
                        </div>
                     <% } %>
                <form class="mt-5" action="/getotp" method="post" onsubmit="return validation()">
                    <div class="form-group">
                        <input type="tel" class="form-control" id="phonenumber" onkeyup="validPhonenumber()" name="phone" placeholder="Registered Phone Number" value="<%= typeof phone != 'undefined' ? phone : '' %>">
                        <span id="phonenumbers" class="text-danger"></span>
                    </div>
                       <div class="mb-4">
                           <button type="submit" class="btn btn-primary w-100">GET OTP</button>
                       </div>
                </form>
                
                
                <% if(errMessage != ""){ %>
                  <div class="mb-4">
                    <a href="/"><button type="submit" class="btn btn-primary w-100">EXIT</button></a>
                  </div>
                 <% } %>
                   <p class="text-center mb-2"><a href="/signup"></a></p>
               </div>
           </div>
       </section> 
       <footer class="main-footer text-center">
           <p class="font-xs">
               <script>
               document.write(new Date().getFullYear())
               </script> Â©, Soles Of Styles .
           </p>
           <p class="font-xs mb-30">All rights reserved</p>
       </footer>
   </main>
<script>
    
     var errorPhonenumber = document.getElementById('phonenumbers')
   function validPhonenumber() {
    const mob = document.getElementById('phonenumber').value
    if (mob == "") {
        errorPhonenumber.innerHTML = "Enter a phonenumber"
        return false
    }
    if (mob.length < 10 || !mob.match(/^\d*$/)) {
        errorPhonenumber.innerHTML = "Please Enter the valid phone number"
        return false
    }

    if (mob.length > 10) {
        errorPhonenumber.innerHTML = "Please Enter the valid phone number"
        return false
    }
    errorPhonenumber.innerHTML = null
    return true
}

function validation() {
    if ( !validPhonenumber()) {
        return false
    }
    return true
}

</script>

