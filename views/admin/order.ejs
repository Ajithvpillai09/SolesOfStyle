                        </tr>
                    </thead>
                    <tbody>
                        <%orders.forEach(item=>{%>

                        <tr>
                            <td><%=item._id%></td>
                            <td><b><%=item.userId.name%></b></td>
                            <td><span><%=item.userId.email%></span></td>
                            <td><span><%=item.userId.phone%></span></td>
                            <td>â‚¹<%=item.totalAmount%></td>
                            <%if(item.paymentSatus == "pending"){%>
