<script>

$(document).ready(function() {
  // Event listener for "Edit" button click
  $(".edit-coupon-btn").click(function() {
    var couponId = $(this).data("coupon-id");
     console.log(couponId,"coupon IDDDDDDDDDDD");
    var modal = $("#editCouponModal");

    // Make an AJAX request to retrieve the modal content dynamically
    $.ajax({
      url: `/admin/coupon-details/${couponId}`, // Replace with the appropriate URL to fetch the modal content
      type: "GET",
      // data: { couponId: couponId },
      success: function(response) {
         console.log(response);
        // // Update the modal content with the fetched data

        $('#couponCode').val(response.couponCode)
        $('#cpnDiscount').val(response.discount)
        $('#minkPurchase').val(response.minPurchase)
           var dateValue = response.expires;
           var date = new Date(dateValue);
           var year = date.getFullYear();
           var month = ('0' + (date.getMonth() + 1)).slice(-2);
           var day = ('0' + date.getDate()).slice(-2);
           
           var formattedDate = year + '-' + month + '-' + day;
           $('#cpnExp').val(formattedDate);
           $('#couponId').val(response._id)


       
        modal.modal("show"); // Show the modal
      },
      error: function() {
        console.log("Error occurred while retrieving the modal content.");
      }
    });
  });
});

$("#saveCouponBtn").click(function(event) {
  event.preventDefault();
  let couponCode = $('#couponCode').val();
  let discount = $('#cpnDiscount').val();
  let minPurchase = $('#minkPurchase').val();
  let expires = $('#cpnExp').val();
  let couponId = $('#couponId').val();
  console.log(couponCode, "coupon code");
  console.log(discount, "discount");
  console.log(minPurchase, "min purchase");
  console.log(expires, "expires on");
  console.log(couponId, "coupon id");
  let editError = document.getElementById('editError')
  
  // Check if any of the required fields are empty
  if (!couponCode || !discount || !minPurchase || !expires) {
    // Display an error message or handle the empty fields
    editError.innerHTML ='Please fill in all the required fields'
    return; // Stop the execution of the function
  }

  $.ajax({
    url: '/admin/edit-coupon',
    type: 'PATCH',
    data: {
      couponCode,
      discount,
      minPurchase,
      expires,
      couponId
    },
    success: (response => {
      Swal.fire({
        position: 'center',
        icon: 'success',
        title: 'Coupon edited successfully',
        showConfirmButton: false,
        timer: 1500
      }).then(() => {
        location.href = '/admin/coupons';
      });

    })
  });
});





        

    
    document.getElementById("profile-tab").addEventListener("click", function() {
    if(document.getElementById("coupon-card").style.display == "block"){
        document.getElementById("coupon-card").style.display = "none"
    }else{
        document.getElementById("coupon-card").style.display = "block"
    }
    });

    



   
    const errorPuchase = document.getElementById('erpurchase')
    const errorDate = document.getElementById('erdate')
    const errorCode = document.getElementById('ercode')
    const errorDiscount = document.getElementById('erdiscount')

   

    function nameValidation(){
        const coupon = document.getElementById('couponCode').value;
            if (coupon == "") {
                errorCode.innerHTML = '*required'
                return false
            }
            errorCode.innerHTML = null
            return true
          }
     function discountValidation(){
        const discount = document.getElementById('discount').value;
            if (discount == "") {
                errorDiscount.innerHTML = '*required'
                return false
            }
            else if(discount>60){
              errorDiscount.innerHTML = '*not allowed! reduce percent'
                return false
            }
             errorDiscount.innerHTML = null
            return true

          }

    function dateValidation(){
            const expireDate = document.getElementById('expiresOn').value;
            if (expireDate == "") {
                errorDate.innerHTML = '*required'
                return false
            }
            errorDate.innerHTML = null
            return true
        }
    function minValidation(){
            const minPuchase = document.getElementById('minPurchase').value;
            if (minPuchase  == "") {
                errorPuchase.innerHTML = '*required'
                return false
            }
            if (!/^\d+(\.\d{1,2})?$/.test(minPuchase)) {
                errorPuchase.innerHTML = 'Invalid input. Please enter a valid number.';
                return false;
            }

            errorPuchase.innerHTML = null
            return true
        }





     function validation() {
            if (!discountValidation() || !nameValidation() || !dateValidation() ||! minValidation()) {
                return false
            }
            return true
        }
    
   function changeStatus(id){
    Swal.fire({
    title: 'Are you sure ?',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#d33',
    cancelButtonColor: '#4CAF50',
    confirmButtonText: 'Yes, change it!'
  }).then((result)=>{
    if(result.isConfirmed){
      $.ajax({
        url:'/admin/change-coupon-status',
        type:'PATCH',
        data:{
            id:id
        },
        success:(response=>{
            if(response.status){
              Swal.fire({
              position: 'center',
              icon: 'success',
              title: 'Status changed succesfully',
              showConfirmButton: false,
              timer: 1500
          }).then(()=>{
            location.href ='/admin/coupons'
          })
            }
        })
      })
    }
  })
   }
  
</script>