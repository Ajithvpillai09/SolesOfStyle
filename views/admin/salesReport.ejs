<main class="main-wrap">
    <section class="content-main">
        <div class="card">
            <div class="card-body">
                <%if(render=== true){%>


                <!-- Bordered Tabs Justified -->
                <ul class="nav nav-tabs nav-tabs-bordered d-flex" id="borderedTabJustified" role="tablist">
                    <li class="nav-item flex-fill" role="presentation">
                        <button class="nav-link w-100 active btn  " id="home-tab" data-bs-toggle="tab"
                            data-bs-target="#bordered-justified-home" type="button" role="tab" aria-controls="home"
                            aria-selected="true">Daily Sales Report</button>
                    </li>
                    <li class="nav-item flex-fill" role="presentation">
                        <button class="nav-link w-100 btn " id="profile-tab" data-bs-toggle="tab"
                            data-bs-target="#bordered-justified-profile" type="button" role="tab" aria-controls="profile"
                            aria-selected="false">Monthly Sales Report</button>
                    </li>
                    <li class="nav-item flex-fill" role="presentation">
                        <button class="nav-link w-100 btn " id="contact-tab" data-bs-toggle="tab"
                            data-bs-target="#bordered-justified-contact" type="button" role="tab" aria-controls="contact"
                            aria-selected="false">Yearly Sales Report</button>
                    </li>
                </ul>
                <div class="tab-content pt-2" id="borderedTabJustifiedContent">
                    <div class="tab-pane fade show active" id="bordered-justified-home" role="tabpanel"
                        aria-labelledby="home-tab">
                        <div class="card">
                            <div class="card-body">
                                <!-- Table with hoverable rows -->
                                <table class="table table-hover" id="dailyReport">
                                    <thead>
                                        <tr>
                                            <th scope="col">Date</th>
                                            <th scope="col">Total Amount</th>
                                        </tr>
                                    </thead>
                                     <button class="btn btn-outline-danger mt-2 mb-2 ml-5" onclick=" weeklySales() "><i class="bi bi-download"></i> Download PDF</button>
                                     <button class="btn btn-outline-success mt-2 mb-2 ml-5" onclick=" weeklySalesReport() "><i class="bi bi-download"></i> Download Excel</button>
                                    <tbody>
                                      <%weeklyReport.forEach(item=>{%>
                                        <tr>
                                           <!-- <th scope="row"><input type="checkbox" /></th> -->
    
                                            <td class="tm-product-name"><%=item.date%></td>
    
                                            <td class="tm-product-name">₹<%=item.total%></td>
                                        </tr>
                                        <%})%>
                                        <tr>
                                            <td style="font-weight: bolder;">Total sales amount:₹<%=weekTotal[0].totalAmount%></td>
                                        </tr>
                                    </tbody>
                                   
                                </table>
                                <!-- End Table with hoverable rows -->
                            </div>
                        </div>
                    </div>
    
                    <div class="tab-pane fade" id="bordered-justified-profile" role="tabpanel"
                        aria-labelledby="profile-tab">
                        <div class="card">
                            <div class="card-body">
                                <!-- Table with hoverable rows -->
                                <table class="table table-hover" id="monthlyReport">
                                    <thead>
                                        <tr>
                                            <th scope="col">Month</th>
                                            <th scope="col">Total Amount</th>
                                        </tr>
                                    </thead>
                                    <button class="btn btn-outline-danger mt-2 mb-2 ml-5" onclick="monthlySalesDownload()"><i class="bi bi-download"></i> Download PDF</button>
                                     <button class="btn btn-outline-success mt-2 mb-2 ml-5" onclick="monthlyData()"><i class="bi bi-download"></i> Download Excel</button>
                                    <tbody>
                                        <%monthlySales.forEach(item=>{%>
                                       
                                        <tr>
                                         
    
                                            <td class="tm-product-name"><%=item._id%></td>
                                            <td class="tm-product-name">₹<%=item.total%></td>
                                        </tr>
                                        <%})%>
                                        <tr>
                                            <td style="font-weight: bolder;">Total sales amount:₹<%=monthTotal[0].totalAmount%> </td>
                                        </tr>
                                    </tbody>
                                  
                                </table>
                                <!-- End Table with hoverable rows -->
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="bordered-justified-contact" role="tabpanel"
                        aria-labelledby="contact-tab">
                        <div class="card">
                            <div class="card-body">
                                <!-- Table with hoverable rows -->
                                <table class="table table-hover" id="yearlyReport">
                                    <thead>
                                        <tr>
                                            <th scope="col">Year</th>
                                            <th scope="col">Total Amount</th>
    
                                        </tr>
                                    </thead>
                                    <button class="btn btn-outline-danger mt-2 mb-2 ml-5" onclick="yearlySalesDownload()"><i class="bi bi-download"></i> Download PDF</button>
                                    <button class="btn btn-outline-success mt-2 mb-2 ml-5" onclick="yearlyData()"><i class="bi bi-download"></i> Download excel</button>
                                    <tbody>
                                        <%yearlySales.forEach(item=>{%>
                                        <tr>
                                           <!-- <th scope="row"><input type="checkbox" /></th>
     -->
                                            <td class="tm-product-name"><%=item._id%></td>
                                            <td class="tm-product-name">₹<%=item.total%></td>
                                        </tr>
                                        <%})%>
                                        <tr>
                                            <td style="font-weight: bolder;">Total sales amount:₹<%=yearTotal[0].totalAmount%></td>
                                    
                                        </tr>
                                    </tbody>
                                  
                                </table>
                                <!-- End Table with hoverable rows -->
                            </div>
                        </div>
                    </div>
                </div><!-- End Bordered Tabs Justified -->
            </div>
            <%}else{%>
                  <h1>No Sales</h1>      
                <%}%>
        </div>
    </section>
</main>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
<!-- PDF AND EXCEL -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>




<script>

function weeklySales() {
  
  const element = document.getElementById('dailyReport');
  const heading = document.createElement('h1');
  heading.textContent = 'Weekly Report';
  const container = document.createElement('div');
  container.appendChild(heading);
  container.appendChild(element); 
  container.style.margin = '20px';
  html2pdf().from(container).save('sales-daily-report.pdf');
}

    function weeklySalesReport() {
            var wb = XLSX.utils.book_new();
            var ws = XLSX.utils.table_to_sheet(document.querySelector('#dailyReport'));

            // Adjust column widths
            ws['!cols'] = [
                { wch: 20 }, // Customer Name
                { wch: 10 }, // Order ID
                { wch: 20 }, // Product Name
                { wch: 10 }, // Quantity
                { wch: 15 }, // Unit Price
                { wch: 15 }, // Total Price
            ];

            XLSX.utils.book_append_sheet(wb, ws, "Daily Sales Report");

            // Save the Excel file
            XLSX.writeFile(wb, "sales-daily-report.xlsx");
    }

  function monthlySalesDownload(){
       
        const element = document.getElementById('monthlyReport');
        const heading = document.createElement('h1');
        heading.textContent = 'Monthly Report';
        const container = document.createElement('div');
        container.appendChild(heading);
        container.appendChild(element);
        container.style.margin = '20px';

        html2pdf().from(container).save('sales-monthly-report.pdf');
  }

  function monthlyData() {
            var wb = XLSX.utils.book_new();
            var ws = XLSX.utils.table_to_sheet(document.querySelector('#monthlyReport'));

            // Adjust column widths
            ws['!cols'] = [
                { wch: 20 }, // Customer Name
                { wch: 10 }, // Order ID
                { wch: 20 }, // Product Name
                { wch: 10 }, // Quantity
                { wch: 15 }, // Unit Price
                { wch: 15 }, // Total Price
            ];

            XLSX.utils.book_append_sheet(wb, ws, "Month Sales Report");

            // Save the Excel file
            XLSX.writeFile(wb, "sales-monthly-report.xlsx");
    }
    function yearlySalesDownload(){
       
       const element = document.getElementById('yearlyReport');
       const heading = document.createElement('h1');
       heading.textContent = 'Yearly Report';
       const container = document.createElement('div');
       container.appendChild(heading);
       container.appendChild(element);
       container.style.margin = '20px';

       html2pdf().from(container).save('sales-year-report.pdf');
 }
 function yearlyData() {
            var wb = XLSX.utils.book_new();
            var ws = XLSX.utils.table_to_sheet(document.querySelector('#yearlyReport'));

            // Adjust column widths
            ws['!cols'] = [
                { wch: 20 }, // Customer Name
                { wch: 10 }, // Order ID
                { wch: 20 }, // Product Name
                { wch: 10 }, // Quantity
                { wch: 15 }, // Unit Price
                { wch: 15 }, // Total Price
            ];

            XLSX.utils.book_append_sheet(wb, ws, "Year Sales Report");

            // Save the Excel file
            XLSX.writeFile(wb, "sales-yearly-report.xlsx");
    }

</script>
    
    
